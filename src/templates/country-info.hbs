<div class="col-lg-6">
  <h2 class="text-uppercase text-center">{{name}}</h2>
  <ul class="list-unstyled">
    <li><span class="font-weight-bold">Capital: </span>{{capital}}</li>
    <li><span class="font-weight-bold">Population: </span>{{population}}</li>
    <li><span class="font-weight-bold">Languages: </span>
      <ul>
      {{#each languages}}
          <li>{{this.name}}</li>
      {{/each}}
      </ul>
    </li>
  </ul>
</div>
<div class="col-lg-6">
  <img class="flag shadow my-2" src="{{flag}}" alt="">
</div>